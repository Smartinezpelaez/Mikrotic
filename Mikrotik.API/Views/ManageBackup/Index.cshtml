@model Mikrotik.BL.DTOs.AddIpAddressDTO
@using Mikrotik.BL.DTOs

@{
    ViewBag.Title = "Index";
    var listFile = new List<FileDTO>();

    if (ViewBag.File != null)
    {
        listFile = (List<FileDTO>)ViewBag.File;
    }
}

<div class="container" style="margin-top:90px;">
    <h1>Manage Backup</h1>
    <hr />
    <div class="row">
        @Html.ActionLink("Export File", "ExportFile", null, "ManageBackup", new { @class = "btn btn-primary" })
        @Html.ActionLink("Back", "Index", "Dashboard", null, new { @class = "btn btn-primary" })
    </div>
    <hr />
    <h1>Files</h1>
    <hr />
    <div class="row">
        <div class="col-12 responsive-table">
            <table id="tabla" class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Size</th>
                        <th>CreationTime</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tableFile">
                    @foreach (var item in listFile)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Size)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreationTime)
                            </td>
                            <td>
                                @Html.ActionLink("Import", "ImportFile", "ManageBackup", new { id = item.Id.Replace("*", string.Empty) }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>