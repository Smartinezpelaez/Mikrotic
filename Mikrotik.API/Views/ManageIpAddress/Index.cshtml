@model Mikrotik.BL.DTOs.AddIpAddressDTO
@using Mikrotik.BL.DTOs

@{
    ViewBag.Title = "Index";
    var listIpAddress = new List<IpAddressDTO>();
    var listRoute = new List<RouteDTO>();

    if (ViewBag.IpAddress != null &&
        ViewBag.Route != null)
    {
        listIpAddress = (List<IpAddressDTO>)ViewBag.IpAddress;
        listRoute = (List<RouteDTO>)ViewBag.Route;
    }
}

<div class="container" style="margin-top:90px;">
    <h1>Manage Ip Address</h1>
    <hr />
    <div class="row">
        @using (Html.BeginForm("AddIpAddress", "ManageIpAddress", FormMethod.Post))
        {
            <div class="col-md-4">
                <label>Address</label>
                @Html.EditorFor(m => m.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label>Interface</label>
                <input class="form-control" type="text" placeholder="Enter the Interface" />
                @Html.EditorFor(m => m.Interface, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Interface, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label>Network</label>
                @Html.EditorFor(m => m.Network, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Network, "", new { @class = "text-danger" })
            </div>
            <input class="btn btn-primary" type="submit" value="Add Address" />
        }
    </div>
    <hr />
    <h1>Ip Address</h1>
    <hr />
    <div class="row">
        <div class="col-12 responsive-table">
            <table id="tabla" class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Address</th>
                        <th>Network</th>
                        <th>Interface</th>
                    </tr>
                </thead>
                <tbody id="tableIpAddress">
                    @foreach (var item in listIpAddress)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Network)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Interface)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <hr />
    <h1>Route</h1>
    <hr />
    <div class="row">
        <div class="col-12 responsive-table">
            <table id="tabla" class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>DesAddress</th>
                        <th>Gateway</th>
                        <th>Distance</th>
                    </tr>
                </thead>
                <tbody id="tableRoute">
                    @foreach (var item in listRoute)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DstAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gateway)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Distance)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>